# SAR Mission Commander Frontend Configuration
# Copy this file to .env and adjust values for your environment

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
VITE_API_URL=http://localhost:8000/api/v1

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000/ws

# Application Configuration
NODE_ENV=production
REACT_APP_VERSION=1.0.0

# Map Configuration (for displaying missions)
VITE_MAPBOX_TOKEN=your-mapbox-token-here
VITE_DEFAULT_MAP_CENTER_LAT=40.7128
VITE_DEFAULT_MAP_CENTER_LNG=-74.0060
VITE_DEFAULT_MAP_ZOOM=10

# Analytics Configuration (optional)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_ADVANCED_ANALYTICS=false
VITE_ENABLE_DEBUG_TOOLS=false

# Authentication Configuration (if implementing auth)
VITE_AUTH_PROVIDER=local
VITE_JWT_SECRET=your-jwt-secret-here

# Development overrides (uncomment for development)
# NODE_ENV=development
# REACT_APP_API_URL=http://localhost:8000/api/v1
# VITE_API_URL=http://localhost:8000/api/v1
# VITE_WS_URL=ws://localhost:8000/ws
# VITE_ENABLE_DEBUG_TOOLS=true