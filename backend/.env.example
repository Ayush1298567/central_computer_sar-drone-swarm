# SAR Mission Commander Backend Configuration
# Copy this file to .env and adjust values for your environment

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=your-production-secret-key-must-be-at-least-32-characters-long-for-security
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://sar_user:your_secure_password_here@db:5432/sar_missions

# AI Service Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=phi3:mini

# Mission Configuration
MAX_MISSIONS=100
MAX_DRONES=50
DEFAULT_MISSION_TIMEOUT_MINUTES=120

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=100

# Notification Configuration
ENABLE_WEBSOCKET_NOTIFICATIONS=true

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Email Configuration (optional, for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring Configuration (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Backup Configuration (optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Development overrides (uncomment for development)
# DATABASE_URL=sqlite:///./sar_missions.db
# DEBUG=true
# LOG_LEVEL=DEBUG
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000